// Declare variables
int numSales; // Number of sales made by the team
int totalRevenue; // Total revenue generated by the team
int avgSale; // Average sale amount

// Initialize arrays
int[] sales; // Array to store the amount of each sale
string[] customers; // Array to store the names of the customers for each sale

// Prompt user for input
print "Enter the number of sales made: ";
numSales = getInput();

// Initialize arrays with user-specified size
sales = new int[numSales];
customers = new string[numSales];


// Loop through each sale and get the amount and customer name
for (int i = 0; i < numSales; i++) {
   print "Enter the amount of sale " + (i+1) + ": ";
   sales[i] = getInput();
   print "Enter the name of the customer for sale " + (i+1) + ": ";
   customers[i] = getInput();
